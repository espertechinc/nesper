    <Compile Remove="common\internal\epl\agg\access\sorted\AggregationMethodSortedWrapperSortedSet.cs" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CodeAnalysis.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="common\client\json\minimaljson\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="common\client\json\minimaljson\**" />
  </ItemGroup>
</Project>
