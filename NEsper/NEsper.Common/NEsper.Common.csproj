    <Compile Remove="common\internal\compile\stage2\FilterSpecCompilerPlanner.cs" />
    <Compile Remove="common\internal\compile\stage2\FilterSpecCompilerMakeParamUtil.cs" />
    <Compile Remove="common\internal\epl\expression\table\ExprTableIdentNodeSubpropAccessor.cs" />
    <Compile Remove="common\internal\epl\expression\table\ExprTableAccessNodeSubpropAccessor.cs" />
    <Compile Remove="common\internal\epl\expression\core\ExprChainedSpec.cs" />
    <Compile Remove="common\client\json\minimaljson\**" />
